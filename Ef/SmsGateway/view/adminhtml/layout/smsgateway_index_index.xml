                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                                <argument name="renderer" xsi:type="string">Ef\SmsGateway\Block\Adminhtml\Ef_sms_grid\Edit\Tab\Renderer\CustomerName</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="number">
